{
  "name": "@teams/angular",
  "version": "0.0.0",
  "description": "An Angular schematics collection to create Microsoft Teams applications.",
  "scripts": {
    "build": "npm run -s build:copy && tsc -p tsconfig.json",
    "build:watch": "npm run -s build:copy && tsc -p tsconfig.json --watch",
    "build:copy": "copyfiles -u 1 src/**/files/**/* lib/",
    "clean": "rimraf lib",
    "test": "jest src/**/*.spec.ts",
    "test:schematics": "schematics .:teams-app test"
  },
  "keywords": [
    "schematics"
  ],
  "author": "",
  "license": "MIT",
  "schematics": "./lib/collection.json",
  "dependencies": {
    "@angular-devkit/core": "^13.1.2",
    "@angular-devkit/schematics": "^13.1.2",
    "@schematics/angular": "^13.2.2"
  },
  "devDependencies": {
    "@angular-devkit/schematics-cli": "^13.2.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^12.11.1",
    "copyfiles": "^2.4.1",
    "jest": "^27.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "~4.5.2"
  },
  "files": [
    "bin",
    "lib"
  ]
}
